<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666"
    tools:context="com.kogitune.prelollipoptransition.SubActivity">

    <include layout="@layout/list_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/layout_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#0f0"
            android:clickable="true"
            android:scaleX="1"
            android:scaleY="1">

            <LinearLayout
                android:id="@+id/layout_inner_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="500dp"
                android:orientation="vertical"
                android:layout_marginTop="300dp"
                android:padding="10dp">


                <com.gamebuddy.bigshow.view.vandor.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="The license for this font is the SIL OFL license. Write something here."
                    android:textColor="@color/app_theme_color"
                    android:textSize="16dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_last_cover"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/darker_gray"
            android:visibility="visible" />


    </RelativeLayout>


</FrameLayout>
